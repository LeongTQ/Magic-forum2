<div class="modal fade" id="login">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">

          <%= form_for(:user, url: sessions_path, html: { id: "login-form" }) do |f| %>

            <h1 class="text-center">
              Login
            </h1>

            <br>

            <div class="form-group text-center">
              <h4> <%= f.label :email %> </h4>
              <%= f.text_field :email, id: "username_title_field", class: 'form-control' %>
            </div>

            <div class="form-group text-center">
              <h4> <%= f.label :password %> </h4>
              <%= f.password_field :password, id: "password_title_field", class: 'form-control' %>
            </div>

            <%= f.submit 'Login', class: "btn btn-success btn-lg" %>

            <%= link_to ('Reset Password'), new_password_reset_path, class: "btn btn-success btn-lg" %>

          <% end %>

        </div>
      </div>
    </div>
</div>
