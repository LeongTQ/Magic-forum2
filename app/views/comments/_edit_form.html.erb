<div class="form-edit">
  <div id="comment-update">

    <%= form_for(comment, url: topic_post_comment_path(topic, post, comment), authenticity_token: true, remote: true, html: { id: "comment-update-form", multipart: true }) do |f| %>

      <% if comment.image? %>
        <%= image_tag comment.image, class: "img-settings img-responsive center-block" %>
      <% end %>
    

      <div class="form-group">
        <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
      </div>

      <div class="form-group">
        <h4> <%= f.label :text_field, "Body" %> </h4>
        <%= f.text_field :body, id: "post_body_field", class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit class: "btn btn-success btn-lg" %>
        <div class="btn btn-success btn-lg cancel-button" data-id="<%= @comment.id %>">
          Cancel here lah
        </div>
      </div>

    <% end %>
  </div>
</div>
