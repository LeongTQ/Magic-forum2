<div class="topics">

  <div class="background_topics">
    <h1>Topics for discussion</h1>
  </div>

  <div class="background2_topics">
    <div style="padding:15px">
      <div class="flex-parent text-center">
        <% @topics.each do |topic| %>
          <div class="flex-child">
            <h3><%= link_to topic.title, topic_posts_path(topic), :class => "title-link-color" %></h3>
            <h5><%= topic.description %></h5>
            <%= link_to ("Edit"), edit_topic_path(topic), :class => "btn btn-warning" %>
            <%= link_to ("Delete"), topic_path(topic), method: :delete, data: { confirm: "Delete?" }, :class => "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
    <div style="padding-bottom:15px">
      <div class="new_topic_button">
        <%= link_to ("Add New Topic"), new_topic_path, :class => "btn btn-warning" %>
      </div>
    </div>
  </div>

</div>
