<div class="modal fade" id="register">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">

          <%= form_for(:user, url: users_path, html: { id: "register-form", multipart: true }) do |f| %> <!-- user: { username: "", email: ""} -->

            <h1 class="text-center">
              Register New User
            </h1>

            <br>

            <div class="form-group text-center">
              <h4> <%= f.label :username %> </h4>
              <%= f.text_field :username, required: true, id: "username_title_field", class: 'form-control' %>
            </div>

            <div class="form-group text-center">
              <h4> <%= f.label :email %> </h4>
              <%= f.text_field :email, required: true, id: "email_title_field", class: 'form-control' %>
            </div>

            <div class="form-group text-center">
              <h4> <%= f.label :password %> </h4>
              <%= f.password_field :password, required: true, id: "password_title_field", class: 'form-control' %>
            </div>

            <div class="form-group text-center">
              <h4> <%= f.label :password_confirmation %> </h4>
              <%= f.password_field :password_confirmation, required: true, id: "password_title_field", class: 'form-control' %>
            </div>

            <div class="form-group">
                <h4 class="text-center"> Post Image </h4>
                <div id="preview-image">
                  <%= image_tag "", class: "img-settings img-responsive center-block" %>
                </div>
            </div>

            <div class="form-group text-center">
              <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "Register", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
