<div class="posts">

  <div class="background_posts">
    <h1>Posts</h1>
  </div>

  <div class="flex-parent text-center">

    <% @posts.each do |post| %>
      <div class="flex-child">
        <h3><%= link_to post.title, post_path(post) %></h3>
        <h5><%= post.body %></h5>
        <%= link_to ("Edit"), edit_post_path(post), :class => "btn btn-warning" %>
        <%= link_to ("Delete"), post_path(post), method: :delete, data: { confirm: "Delete?" }, :class => "btn btn-warning" %>
      </div>
    <% end %>
  </div>

  <div class="new_post_button">
    <%= link_to ("Add New Post"), new_post_path, :class => "btn btn-warning" %>
  </div>

</div>
