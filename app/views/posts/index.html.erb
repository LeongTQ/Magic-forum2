<div class="posts">

  <div class="background_posts">
    <h1><%="#{@topic.title}"%></h1>
  </div>

  <div class="background2_posts">
    <div style="padding:15px">

      <div class="flex-parent text-center">
        <% @posts.each do |post| %>
          <div class="flex-child">
              <% if post.image? %>
                <%= image_tag post.image, class: "img-settings img-responsive center-block" %>
              <% end %>
            <h3><%= link_to post.title, topic_post_comments_path(@topic, post), :class => "title-link-color" %></h3>
            <h5><%= post.body %></h5>
            <%= link_to ("Edit"), edit_topic_post_path(@topic, post), :class => "btn btn-warning" %>
            <%= link_to ("Delete"), topic_post_path(@topic, post), method: :delete, data: { confirm: "Delete?" }, :class => "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
    <div style="padding-bottom:15px">
      <div class="new_post_button">
        <%= link_to ("Add New Post"), new_topic_post_path, :class => "btn btn-warning" %>
      </div>
    </div>
  </div>

</div>
