$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")

<% if @post.persisted? %>
  $('#posts').prepend("<%=j render partial: 'posts', locals: { post: @post, topic: @post.topic } %>")
  $('#posts-form-container').html("<%=j render partial: 'create_form', locals: { post: @new_post, topic: @topic } %>")
<% end %>
